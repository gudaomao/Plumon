<html lang="en">
    <head>
        <title>Plumon</title>
        <link rel="stylesheet" href="/stylesheets/bootstrap.css" />
        <link rel="stylesheet" href="/stylesheets/style.css" />
        <link rel="stylesheet" href="/stylesheets/bootstrap-tagsinput.css" />
        <script type="text/javascript" src="/javascripts/jquery.1.10.js"></script>
        <script type="text/javascript" src="/javascripts/bootstrap.js"></script>
        <script type="text/javascript" src="/javascripts/bootstrap-tagsinput.js"></script>
        <script type="text/javascript" src="/javascripts/m.js"></script>
    </head>
    <body>
        <div class="mycontainer">
            <%- include top.ejs %>
            <div class="leftbox">
                <% if(title){%>
                <h1><%= title %></h1>
                <%}%>
                <div id="notelist">
                    <% docs.forEach(function(p,index){ %>
                        <div class="note">
                            <div class="noteleft">
                                <div class="userinfo"><img src="/images/avatar/<%= p.user %>.png" /></div>
                            </div>
                            <div class="noteright">
                                <div class="ntitle titleshadow"><a href="/user/<%= p.user %>"><%= p.user %></a> : <a href="/note/<%= p._id %>"><%= (p.source && p.source.id)?'[转帖]':''%><%= p.title %></a></div>
                                <div class="ncodes">
                                    <%= (p.codes.length>300)?(p.codes.substring(0,300)+"..."):p.codes %>
                                </div>
                                <% if(p.tags){%>
                                <div class="ntags">
                                    <span>标签：</span>
                                    <% p.tags.forEach(function(t,index){ %>
                                        <a href="/tag/<%= t %>"><%= t %></a>
                                     <% }) %>
                                </div>
                                <% } %>
                                <div class="ninfo">
                                    <span>发表于：<%= gettime(p.time) %></span>
                                    <span>浏览：<%= (p.pv)?p.pv:"0" %></span>
                                </div>
                            </div>
                            <div class="clear"></div>
                       </div>
                    <% }) %>

                </div>
            </div>
            <div class="rightbox">
                <%- include userbox.ejs %>
                <div class="infobox">
                    <div class="infoboxtitle">热点标签</div>
                    <div id="hottags"></div>
                </div>
            </div>
            <div class="clear"></div>
            <%- include bottom.ejs %>
            <%
                function gettime(time){
                    var date = new Date(time);
                    var d = date.getFullYear()+"-";
                    d+=(date.getMonth()+1)+"-";
                    d+=date.getDate();
                    return d;
                }
            %>
        </div>
    </body>
</html>